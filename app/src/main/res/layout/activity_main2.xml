            android:background="@color/seoul_default_lightest"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="12.3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.7dp"
            android:fontFamily="@font/georgia"
            android:paddingTop="13.3dp"
            android:text="위치"
            android:textColor="@color/seoul_default"
            android:textSize="11.7sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:paddingLeft="0dp"
                android:paddingTop="7.7dp"
                android:paddingBottom="8.3dp"
                android:textColor="#7a7f85"
                android:textSize="13sp"
                />

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_place"
                android:paddingBottom="8.3dp"
                android:paddingLeft="0dp"
                android:layout_marginLeft="0dp"
                android:paddingTop="10dp"/>
            <TextView
                android:id="@+id/textView5"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_regular"
                android:paddingBottom="8.3dp"
                android:paddingLeft="0dp"
                android:paddingTop="7.7dp"
                android:textColor="#7a7f85"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/shadow2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:orientation="horizontal">

        </LinearLayout>




        <RelativeLayout
            android:id="@+id/map_view"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:layout_gravity="center">

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="길찾기"
                android:onClick="onButton1Clicked"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="12.3dp"/>


    </LinearLayout>
</ScrollView>

    <Button
        android:id="@+id/button2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="AR View"
        tools:context=".Main2Activity" />

</LinearLayout>
